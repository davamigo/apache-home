{
    "name": "davamigo/apache-home",

    "description": "Apache custom homepage for developers",

    "type": "project",

    "keywords": [
        "apache",
        "homepage"
    ],

    "license": "MIT",

    "authors": [{
        "name": "David Amigo",
        "email": "davamigo@gmail.com",
        "role": "lead"
    }],

    "support": {
        "email": "davamigo@gmail.com",
        "source": "https://github.com/davamigo/apache-home"
    },

    "require": {
        "php": ">=5.3.3",
        "silex/silex": "~2.0",
        "twig/twig": "^1.26"

    },

    "require-dev": {
        "phpunit/phpunit": "~4"
    },

    "config": {
        "secure-http": false,
        "bin-dir": "bin/"
    },

    "autoload": {
        "psr-4": {
            "Davamigo\\ApacheHome\\": "./src/code/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Test\\Davamigo\\ApacheHome\\": "./src/test/"
        }
    }
}
